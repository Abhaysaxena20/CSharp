@{
    ViewData["Title"] = "Index";
}
<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>

<table class="table table-bordered">
    <thead class="text-center">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Salary</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table-data"></tbody>
</table>

<div class="modal fade" id="EmployeeModal" tabindex="-1">
    <div class="modal-dialog">_
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="text-info modal-title" id="EmployeeHeading">Add Employee</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="EmployeeId">
                <form method="post">
                    <div class="form-group m-2">
                        <label>Id</label>
                        <input type="number" id="EmployeeId" class="form-control"readonly />
                    </div>

                    <div class="form-group m-2">
                        <label>Name</label>
                        <input type="text" id="Name" class="form-control" placeholder="Enter Name" />
                    </div>

                    <div class="form-group m-2">
                        <label>Email</label>
                        <input type="email" id="Email" class="form-control" placeholder="Enter Email"  />
                    </div>

                    <div class="form-group m-2">
                        <label>Password</label>
                        <input type="password" id="Password" class="form-control" placeholder="Enter Password"  />
                    </div>

                    <div class="form-group m-2">
                        <label>Salary</label>
                        <input type="number" id="Salary" class="form-control" placeholder="Enter Salary" />
                    </div>

                    <div class="form-group m-2">
                        <label>Role</label>
                        <input type="text" id="Role" class="form-control" placeholder="Enter Role"  />
                    </div>
                </form>
            </div>
            <div>
                <input type="hidden" id="urlEmployeedata" value="@Url.Action("EmployeeList","Ajax")" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" onclick="AddEmployee()" id="AddEmployee">Save</button>
                <button class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="EmployeeModal2" tabindex="-1">
    <div class="modal-dialog">
        _
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="text-info modal-title" id="EmployeeHeading2">Edit</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="EmployeeId2">
                <form method="post">
                    <div class="form-group m-2">
                        <label>Id</label>
                        <input type="number" id="EmployeeId2" class="form-control" readonly />
                    </div>

                    <div class="form-group m-2">
                        <label>Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Enter Name" />
                    </div>

                    <div class="form-group m-2">
                        <label>Email</label>
                        <input type="email" id="email" class="form-control" placeholder="Enter Email" />
                    </div>

                    <div class="form-group m-2">
                        <label>Password</label>
                        <input type="password" id="password" class="form-control" placeholder="Enter Password" autocomplete="on"/>
                    </div>

                    <div class="form-group m-2">
                        <label>Salary</label>
                        <input type="number" id="salary" class="form-control" placeholder="Enter Salary" />
                    </div>

                    <div class="form-group m-2">
                        <label>Role</label>
                        <input type="text" id="role" class="form-control" placeholder="Enter Role" />
                    </div>
                </form>
            </div>
            <div>
                <input type="hidden" id="urlEmployeedata" value="@Url.Action("EmployeeList", "Ajax")" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-success"  id="btnupdate">Update</button>
                <button class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<script src="~/js/custom.js"></script>



